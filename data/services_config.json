{
  "services": {
    "backend": {
      "name": "Backend API",
      "type": "internal",
      "enabled": true,
      "auto_start": true,
      "health_check_interval": 30,
      "ports": [8000],
      "dependencies": []
    },
    "llm": {
      "name": "Local LLM (Ollama)",
      "type": "container",
      "enabled": true,
      "auto_start": false,
      "health_check_interval": 60,
      "restart_on_failure": true,
      "max_restarts": 3,
      "environment": {
        "IMAGE": "ollama/ollama:latest",
        "OLLAMA_HOST": "0.0.0.0"
      },
      "ports": [11434],
      "volumes": [
        "ollama_data:/root/.ollama"
      ]
    },
    "tts": {
      "name": "Text-to-Speech",
      "type": "container",
      "enabled": false,
      "auto_start": false,
      "environment": {
        "IMAGE": "rhasspy/piper:latest"
      },
      "ports": [5500]
    },
    "stt": {
      "name": "Speech-to-Text",
      "type": "container",
      "enabled": false,
      "auto_start": false,
      "environment": {
        "IMAGE": "rhasspy/wyoming-whisper:latest"
      },
      "ports": [10300]
    },
    "redis": {
      "name": "Redis Cache",
      "type": "container",
      "enabled": false,
      "auto_start": false,
      "environment": {
        "IMAGE": "redis:alpine"
      },
      "ports": [6379],
      "volumes": [
        "redis_data:/data"
      ]
    },
    "vector_db": {
      "name": "Vector Database (Qdrant)",
      "type": "container",
      "enabled": false,
      "auto_start": false,
      "environment": {
        "IMAGE": "qdrant/qdrant:latest"
      },
      "ports": [6333, 6334],
      "volumes": [
        "qdrant_data:/qdrant/storage"
      ]
    }
  },
  "sandbox": {
    "default_type": "process",
    "container_runtime": "auto",
    "base_image": "python:3.11-slim",
    "default_memory": "512m",
    "default_cpu": 1.0,
    "default_timeout": 300,
    "network_enabled": false,
    "allowed_base_paths": [
      "/home/tom/Documents",
      "/home/tom/Downloads"
    ]
  },
  "orchestration": {
    "compose_file": "infrastructure/docker/docker-compose.yml",
    "use_podman": true,
    "network_name": "streamware-net",
    "auto_pull_images": true
  }
}
