.PHONY: help list systemd docker status logs

SCRIPTS := $(shell pwd)/scripts

# @text list: "Poka≈º wszystkie us≈Çugi"
# @text systemd: "Poka≈º us≈Çugi systemd"
# @text docker: "Poka≈º kontenery Docker"
# @text status: "Sprawd≈∫ status us≈Çugi"
